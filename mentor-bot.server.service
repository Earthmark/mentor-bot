[Unit]
Description=Maintainer service for the mentor bot
After=network.target

[Service]
ExecStart=node ./out/server.js
Restart=always
User=nobody
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/mentor-bot

[Install]
WantedBy=multi-user.target
